
# vim: expandtab tabstop=4 shiftwidth=4

Host *
    HashKnownHosts no
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    LogLevel quiet
    PermitLocalCommand yes
    LocalCommand [ "${TERM:0:6}" == "screen" ] && echo -ne "\033k$(echo "%h" | sed '/^[a-Z]/ s/\([a-Z\-]*\).*/\1/')\033\\"


